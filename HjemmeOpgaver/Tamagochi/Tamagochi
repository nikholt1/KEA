package Modules;

import java.util.Arrays;

public class Tamagochi {
    private String name;
    private int age = 0;
    private String mood = "moderate";
    private int energy = 100;
    private Tamagochi[] tamagotchis;
    private final int MAX_TAMAGOCHIS = 2;
    private boolean isDead = false;

    public Tamagochi(String name) {
        this.name = name;
        this.tamagotchis = new Tamagochi[MAX_TAMAGOCHIS];

    }



    public void makeSound(){
        System.out.println("Rabble!");
    }
    public boolean getIsDead() {
        return isDead;
    }

    public void play(Tamagochi a) {
        System.out.println(a + " plays");
        energy -= 5;
    }
    public void feed(Tamagochi a) {
        System.out.println(a + " feeds");
        energy += 5;
    }

    public void sleep(Tamagochi a) {
        System.out.println(a + " sleeps");
        energy += 10;
    }

    public String readTamagotchis(Tamagochi a) {
        String stringType = "";
        for (int i = 0; i < tamagotchis.length; i++) {
            if (a == tamagotchis[i]) {
                System.out.println("found" + tamagotchis[i]);
                stringType = String.valueOf(tamagotchis[i]);
                System.out.println(stringType);
                break;
            }
        }
        return stringType;
    }
    public void makeTamagotchi(Tamagochi a) {
        for (int i = 0; i < tamagotchis.length; i++) {
            if (tamagotchis[i] == null) {
                tamagotchis[i] = a;
                System.out.println("Added " + a + " to your Tamagochis");
                break;
            }
        }
    }


    public Tamagochi[] getTamagotchis(Tamagochi tamagotchi) {
        return tamagotchis;
    }

    public String getName() {
        return name;
    }

    public int getAge() {
        return age;
    }


    public String getMood() {
        return mood;
    }


    public int getEnergy() {
        return energy;
    }


    public String toString() {
        return name + age + mood + energy + isDead;
    }



}
